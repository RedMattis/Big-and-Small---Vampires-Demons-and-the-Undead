<Defs>

  <GeneDef ParentName="UVSensitivityBase">
    <defName>VU_UVSensitivity_VeryIntense</defName>
    <label>very intense UV sensitivity</label>
    <labelShortAdj>UV-vulnerable</labelShortAdj>
    <description>Carriers of this gene have biological compounds in their skin that react dangerously to UV radiation. They are intensely sensitive to sunlight.</description>
    <iconPath>GeneIcons/VU_VeryIntenseUVSensitivity</iconPath>
    <displayOrderInCategory>50</displayOrderInCategory>
    <conditionalStatAffecters>
      <li Class="ConditionalStatAffecter_InSunlight">
        <statFactors>
          <MoveSpeed>0.7</MoveSpeed>
          <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
        </statFactors>
      </li>
    </conditionalStatAffecters>
    <biostatCpx>2</biostatCpx>
    <biostatMet>6</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li>
          <symbol>dark</symbol>
        </li>
        <li>
          <symbol>tunnel</symbol>
        </li>
        <li>
          <symbol>under</symbol>
        </li>
        <li>
          <symbol>cave</symbol>
        </li>
        <li>
          <symbol>crypt</symbol>
        </li>
        <li>
          <symbol>dim</symbol>
        </li>
        <li>
          <symbol>night</symbol>
        </li>
      </prefixSymbols>
    </symbolPack>

  </GeneDef>

  <ThoughtDef>
    <defName>SunlightSensitivityVeryIntense</defName>
    <workerClass>ThoughtWorker_InSunlight</workerClass>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <requiredGenes>
      <li>VU_UVSensitivity_VeryIntense</li>
    </requiredGenes>
    <stages>
      <li>
        <label>sunlight sensitivity</label>
        <description>The cruel sun it burns. It burns right into my soul!</description>
        <baseMoodEffect>-24</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  
</Defs>